<head>

    <style>
    
    body {
	background-color: #f2f2f2;
	font-family: Arial, sans-serif;
}

h1 {
	text-align: center;
	margin-top: 50px;
}

form,.life-fields {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-top: 50px;
}

.form-group {
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	margin-bottom: 10px;
    width: 75%;
}

.form-group label {
	margin-bottom: 10px;
    font-size: large;
}

.form-group input[type="text"],
.form-group input[type="number"],
.form-group textarea {
	padding: 10px;
	border-radius: 10px;
	 
	width: 100%;
    border:2px solid #3E54AC;
}

button[type="submit"] {
	background-color: #3E54AC;
	color: #fff;
	padding: 10px 20px;
	border-radius: 5px;
	border: none;
	text-decoration: none;
	cursor: pointer;
