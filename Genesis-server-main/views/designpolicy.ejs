.form-group select {
  padding: 10px;
  border-radius: 5px;
  border: 1px solid #ccc;
  width: 100%;
  max-width: 400px;
  background-color: #fff;
  color: #333;
  font-size: 16px;
  font-weight: bold;
}
    </style>
</head>
<%- include('navbar.ejs') %>
<h1>Design a Policy</h1>
<form method="post" action="/policies_design">
    <div class="form-group">
      <label for="type">Type:</label>
      <select id="type" name="type">
        <option value="car">Car Insurance</option>
        <option value="life">Life Insurance</option>
        <option value="health">Health Insurance</option>
      </select>
    </div>
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required>
    </div>
    <div class="form-group">
      <label for="amount">Amount:</label>
      <input type="number" id="amount" name="amount" required>
    </div>
    <div class="form-group">
        <label for="duration">Term:</label>
        <input type="text" id="term" name="term" placeholder="annual/monthly"required>
    </div>
        <div class="form-group">
            <label for="duration">Duration:</label>
            <input type="number" id="duration" disabled name="duration" placeholder="enter in years"required>
        </div>

      <div class="form-group">
        <label for="premium">Premium:</label>
        <input type="number" id="premium" disabled name="premium" required>
      </div>

    <div class="form-group">
      <label for="details">Details:</label>
      <textarea id="details" name="details"></textarea>
    </div>
    <div class="form-group">
      <label for="tc">Terms and Conditions:</label>
      <textarea id="tc" name="tc"></textarea>
    </div>
    <div class="form-group">
      <label for="ge">GE:</label>
      <textarea type="text" id="ge" name="ge"></textarea>
    </div>
    <div class="form-group">
      <label for="benefits">Benefits:</label>
      <textarea id="benefits" name="benefits"></textarea>
    </div>
<br>
    <button type="submit">Submit</button>
  </form>
  <script>
    var lifeFields = document.getElementById("duration");
    var Fields = document.getElementById("premium");
    var type = document.getElementById("type");
  
    type.addEventListener("change", function() {
      if (type.value == "life") {
        lifeFields.disabled= false;
        Fields.disabled= false;
      }
      else{
          lifeFields.disabled= true;
          Fields.disabled= true;
      }
    });
  </script>
  
