
<head>
    <link rel="stylesheet" href="/css/my-applications.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"/>

</head>

<%- include('navbar.ejs') %>
<!--<div class="wrap">-->
<div class="heading-wrap"><p class="heading">Your Queries</p></div>

<div class="container2">

    <form class="bar" action="/search-my-applications" method="post">
        <select name="searchType"><option>Id</option><option>Life</option><option>Health</option><option>Motor</option></select>
        <input name="search" type="text"  class="search">
        <button class="search-submit" type="submit">Search</button>
    </form>

    <% for(let i=0;i<arr.length;i++){%>
    <div class="items2">

        <div class="inner-item Q">
               <div style="font-size: 16px"> Application id: <%=arr[i]._id%></div>
        </div>
        <div class="inner-item Q">
            <div>    First Name: <%=arr[i].firstName%></div>   <div> Last Name: <%=arr[i].lastName%></div>
        </div>
        <br>
        <div class="inner-item Q">
            <div>  Applied on: <%=arr[i].appliedDate%></div>   <div> Verified on: <%=arr[i].verificationDate%></div>
        </div>
        <br>
        <div class="inner-item Q">
            <%if(arr[i].verificationStatus==='verified'){%>
            <div>  Status : Verified</div>
            <%} else{%>
                <div>  Status : Not Verified Yet</div>

<%}%>
                <div>  Type : <%=arr[i].policyType%></div>
        </div>
        <%if(arr[i].policyType=='Health'){%>
        <div class="inner-item A">
            <a href="/health-applications/<%=arr[i]._id%>">Open application</a>
        </div>
        <%}else if(arr[i].policyType=='LIFE'){%>
        <div class="inner-item A">
            <a href="/life-applications/<%=arr[i]._id%>">Open application</a>
        </div>
        <%}else if(arr[i].policyType=='TRANSPORT'){%>
        <div class="inner-item A">
            <a href="/transport-applications/<%=arr[i]._id%>">Open application</a>
        </div>
        <%}%>


    </div>


    <%}%>

</div>

<%-include('footer.ejs')%>
